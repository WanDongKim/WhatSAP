@model WhatSAP.Models.Account.AdminLoginViewModel

@{
    ViewData["Title"] = "Admin Login";
}

<div class="container m-auto p-4">
    <img class="rounded mx-auto d-block" src="~/images/logo.png" alt="" width="160" height="160"><br />
    <h2 class="text-center">Please sign in for admin</h2>
    <br />

    @if (!ViewData.ModelState.IsValid && ViewData.ModelState["LoginError"].Errors.Any())
    {
        <div class="alert alert-danger text-center w-50 m-auto " role="alert">
            <strong>Error!</strong>@ViewData.ModelState["LoginError"].Errors.First().ErrorMessage
        </div>
    }
    <div>
        <form asp-action="Login" class="form-signin">
            <div class="form-group">
                <input asp-for="Username" type="text" class="form-control" placeholder="Username" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="password" asp-for="Password" class="form-control" placeholder="Password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-lg btn-block">Login</button>
                <button type="reset" class="btn btn-primary btn-lg btn-block">Reset</button>
            </div>
        </form>
        <div class="text-center">
            @Html.ActionLink("Are you not admin?", "Login", "Accounts")
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}