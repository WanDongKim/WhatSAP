@model IEnumerable<WhatSAP.Models.Activity>

<div class="row">
    <div class="col-sm-6">
        @for (int i = 0; i < Model.Count(); i++)
        {
            if (i > 0 && i % 3 == 0)
            {
            @:</div><div class="row">
                <br />
            }

            <div class="card">
                <img class="card-img-top" src="~/images/activities/@(Model.ElementAt(i).Key).jpg" alt="@Model.ElementAt(i).ActivityName" />
                <div class="card-body">
                    <h5 class="card-title">@Model.ElementAt(i).ActivityName</h5>
                    <p class="card-text">
                        @Model.ElementAt(i).Description <br />
                        Price: $@Model.ElementAt(i).Price per person
                    </p>
                    <a class="btn btn-primary" href="@Url.Action("Details", "Activity", new { id = Model.ElementAt(i).ActivityId })">
                        See Details
                    </a>
                </div>
            </div>
        }
    </div>
</div>

<h6 class="border-bottom pb-2 mb-0">Search Result</h6>
<div class="row">
    <div class="my-3 p-3 bg-white rounded shadow-sm">

        @for (int i = 0; i < Model.Count(); i++)
        {
            <div class="media text-muted pt-3">
                <div class="col-sm-2">
                    <img src="~/images/activities/@(Model.ElementAt(i).Key).jpg" alt="" class="mr-2 rounded" style="height:70px; width:70px">
                </div>

                <div class="col-sm-8">
                    <p class="media-body pb-3 mb-0 small lh-125">
                        <strong class="d-block text-gray-dark">@Model.ElementAt(i).ActivityName</strong>
                        @Model.ElementAt(i).Description

                    </p>
                </div>

                <div class="col-sm-2">
                    $@Model.ElementAt(i).Price per person
                </div>
            </div>
            <hr />
        }
    </div>
</div>