@model WhatSAP.Models.SearchResultModel
@{
    Layout = null;
}

<h6 class="border-bottom pb-2 mb-0">Search Result</h6>
<div class="row">
    <div class="my-3 p-3 bg-white rounded shadow-sm">
        @if (Model.ActivityResults.Count() == 0)
        {
            <h3 class="text-error">No items matched your search!</h3>
        }

        @for (int i = 0; i < Model.ActivityResults.Count(); i++)
        {
            <div class="media text-muted pt-3">
                <div class="col-sm-2">
                    <a href="@Url.Action("Details", "Activity", new { id = Model.ActivityResults.ElementAt(i).ActivityId})">
                        <img src="~/images/activities/@(Model.ActivityResults.ElementAt(i).Key).jpg" alt="@(Model.ActivityResults.ElementAt(i).ActivityName)" class="mr-2 rounded" style="height:70px; width:70px">
                    </a>
                </div>

                <div class="col-sm-8">
                    <p class="media-body pb-3 mb-0 small lh-125">
                        <strong class="d-block text-gray-dark">@Model.ActivityResults.ElementAt(i).ActivityName</strong>
                        @Model.ActivityResults.ElementAt(i).Description
                    </p>
                </div>

                <div class="col-sm-2">
                    $@Model.ActivityResults.ElementAt(i).Price per person
                </div>
            </div>
            <hr />
        }
    </div>
</div>